<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginLeft="16dp">
    <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/book_title"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"
            android:textSize="36sp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/description"
            android:textSize="24sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/book_title"/>
    <TextView
            android:text="Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/status"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/description"/>
    <Button
            android:text="@string/view_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/view_requests"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            tools:visibility="visible"/>
    <Button
            android:text="@string/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scan"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:textSize="24sp" android:layout_marginEnd="20dp"
            tools:visibility="gone" android:visibility="gone"/>
    <Button
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/location"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintStart_toEndOf="@+id/button" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:layout_marginStart="20dp"
            tools:visibility="gone" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>